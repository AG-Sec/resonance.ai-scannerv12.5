{
  "SCANNER": {
    "UNIVERSE_PATH": "./data/universe/coinbase/universe.latest.jsonl",
    "REFRESH_SECONDS": 1.0,
    
    "LIMITS": {
      "CANDLE_INTERVAL_SECONDS": 60,
      "ABS_VOL_MIN_USD": 2000.0
    },
    
    "SINGLE_BAND": {
      "CANDLES": 10,
      "BREAKOUT_THRESHOLD": 0.010,
      "VOLUME_SPIKE_RATIO": 1.30
    },
    
    "POST_FILTERS": {
      "ENABLED": true,
      "FILTER_LOGIC": "ALL",
      
      "RSI": {
        "ENABLED": true,
        "PRESET": "DEFAULT",
        "PERIOD": 14,
        "LOW": 50,
        "HIGH": 70
      },
      
      "VPM": {
        "ENABLED": true,
        "LOOKBACK_MIN": 5,
        "MIN_USD": 3000
      },
      
      "MACD": {
        "ENABLED": true,
        "RULE": "hist_up",
        "FAST": 12,
        "SLOW": 26,
        "SIGNAL": 9
      }
    },
    
    "DUPLICATE_CONTROL": {
      "MIN_SECONDS_BETWEEN_ALERTS_PER_PAIR": 90
    },
    
    "LOGGING": {
      "SAVE_DETECTIONS": true,
      "CSV_PATH": "./data/detections/detections.latest.csv",
      "JSONL_PATH": "./data/detections/detections.latest.jsonl"
    },
    
    "DISCORD": {
      "ENABLED": true,
      "WEBHOOK_URL": "YOUR_DISCORD_WEBHOOK_URL_HERE"
    },
    
    "WEBSOCKET": {
      "ENABLED": true,
      "URL": "wss://ws-feed.exchange.coinbase.com",
      "CHANNELS": ["level2"],
      "EMIT": "on_minute",
      "BACKFILL_BARS": 15
    },
    
    "REST": {
      "API_URL": "https://api.exchange.coinbase.com"
    }
  },
  
  "STORAGE": {
    "SQLITE": {
      "ENABLED": false,
      "DB_PATH": "./data/db/scanner.db",
      "COMMENT": "Set ENABLED to true to activate SQLite storage alongside CSV/JSONL"
    }
  },
  
  "ALERTS": {
    "TELEGRAM": {
      "ENABLED": false,
      "TOKEN": "YOUR_TELEGRAM_BOT_TOKEN",
      "CHAT_ID": "YOUR_TELEGRAM_CHAT_ID",
      "COMMENT": "Set ENABLED to true and provide valid TOKEN and CHAT_ID to activate Telegram alerts"
    }
  }
}
